<Window x:Class="CopyOracleDatabaseToPostgresql.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1024" Width="1024">
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Column="0" Margin="10">
      <CheckBox Content="Create Role" />
      <CheckBox Content="Create Schemas" />
      <CheckBox Content="Create tables" />
      <CheckBox Content="Fill tables" />
    </StackPanel>
    <Button Grid.Column="1" Content="Start" Width="100" Height="30" HorizontalAlignment="Center" Padding="0,0,0,0" />
    <TextBox Grid.Column="2" Height="300" AcceptsReturn="True" TextWrapping="Wrap" HorizontalAlignment="Stretch" />
  </Grid>
</Window>
