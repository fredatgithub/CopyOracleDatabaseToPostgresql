<Window x:Class="CopyOracleDatabaseToPostgresql.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Column="0">
      <CheckBox Content="Create Role" />
      <CheckBox Content="Create Schemas" />
      <CheckBox Content="Create tables" />
      <CheckBox Content="Fill tables" />
    </StackPanel>
    <TextBox Grid.Column="1" Width="200" Height="300" AcceptsReturn="True" TextWrapping="Wrap" />
  </Grid>
</Window>
